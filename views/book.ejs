<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title><%= title %></title>
        <script src="https://cdn.seatsio.net/chart.js"></script>
        <script>
            new seatsio.SeatingChart({
                divId: "seats",
                publicKey: "<%= seatsio.publicKey %>",
                event: "<%= seatsio.eventKey %>",
                maxSelectedObjects: 1,
                onObjectMouseOver: (obj) => {
                    const seatInfo = document.querySelector("#seatInfo");
                    if (obj.status === "booked") {
                        seatInfo.innerHTML = `Plats ${obj.id} är upptagen av ${
                            obj.extraData.name
                        }`;
                    } else {
                        seatInfo.innerHTML = `Plats ${obj.id} är ledig.`;
                    }
                },
                onObjectSelected: (obj) => {
                    const newChild = document.querySelector("#seat");
                    newChild.value = obj.id;
                }
            }).render();
        </script>
        <%- include("bootstrap") %>
    </head>

    <body>
        <%- include("topbar") %>
        <div style="margin-top: 1rem;" class="container">
            <div class="row align-items-center card-deck">
                <div class="card">
                    <div class="card-header"><h4>Sittplats</h4></div>
                    <div class="card-body">
                        <p id="seatInfo" class="card-text">
                            Håll musen över en plats för att se mer information
                        </p>
                        <form
                            action="/api/v1/bookings/book"
                            method="post"
                            id="form"
                        >
                            <input hidden name="seat" id="seat" />
                        </form>
                        <button
                            id="submit"
                            data-toggle="modal"
                            data-target="#confirmModal"
                            type="submit"
                            class="btn btn-primary"
                        >
                            Boka plats
                        </button>

                        <div
                            class="mx-auto"
                            style="height: auto; width: 50%; transform: rotate(0deg)"
                            id="seats"
                        ></div>
                    </div>
                </div>
            </div>
        </div>

        <div id="confirmModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                        <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal"
                        >
                            Nej
                        </button>
                        <button
                            id="submitConfirm"
                            type="button"
                            class="btn btn-primary"
                        >
                            Ja
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <script src="/javascripts/new/book.js"></script>
    </body>
</html>
